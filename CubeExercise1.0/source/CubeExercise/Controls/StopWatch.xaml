<UserControl x:Class="CubeExercise.StopWatch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="270">
    <UserControl.Resources>
        <Style x:Key="StopWatchFontStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="48" />
            <Setter Property="FontFamily" Value="Courier New" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" Height="50" Width="270" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="txtMinutes" Style="{StaticResource StopWatchFontStyle}">000</TextBlock>
        <TextBlock Style="{StaticResource StopWatchFontStyle}">:</TextBlock>
        <TextBlock Name="txtSedonds" Style="{StaticResource StopWatchFontStyle}">00</TextBlock>
        <TextBlock Style="{StaticResource StopWatchFontStyle}">.</TextBlock>
        <TextBlock Name="txtMilliseconds" Style="{StaticResource StopWatchFontStyle}">00</TextBlock>
    </StackPanel>
</UserControl>
